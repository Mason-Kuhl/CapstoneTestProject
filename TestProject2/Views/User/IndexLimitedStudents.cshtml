@model IEnumerable<TestProject2.Models.ApplicationUser>
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Students</h2>

<table id="users" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Student Id</th>
            <th>Email</th>
            <th>Id</th>
            <th>Role</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            if (user.Role == "Student")
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.StudentId</td>
                    <td>@user.Email</td>
                    <td>@user.Id</td>
                    <td>@user.Role</td>
                </tr>
            }
        }
    </tbody>
</table>

