@model IEnumerable<TestProject2.Models.ApplicationUser>
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Users</h2>

<p>
    @Html.ActionLink("Register New User", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })
</p>

<table id="users" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Student Id</th>
            <th>Email</th>
            <th>Id</th>
            <th>Role</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.StudentId</td>
                <td>@user.Email</td>
                <td>@user.Id</td>
                <td>@user.Role</td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new {id = user.Id})
                </td>
            </tr>
        }
    </tbody>
</table>

